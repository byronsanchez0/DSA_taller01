<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuadratica"
    android:orientation="vertical"
    android:background="@color/palido">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="55dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="-82dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/Amarillo1"
                card_view:cardCornerRadius="30dp"
                card_view:cardElevation="4dp">

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="log in"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />


                <Button
                    android:id="@+id/btn_cuadratica"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="54dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="Ecuacion cuadratica"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />

                <Button
                    android:id="@+id/btn_votos"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="99dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="Votos"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />

                <Button
                    android:id="@+id/btn_pago"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="146dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="Pago l[iquido"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Resolviendo ecuacion cuadratica"
            android:textSize="30dp"
            android:textStyle="bold"
            android:drawableBottom="@drawable/ic_baseline_calculate_24"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Inserte los numeros:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/amarillo2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="76dp">

            <EditText
                android:id="@+id/et_a"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:hint="a"
                />
            <EditText
                android:id="@+id/et_b"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="25dp"
                android:gravity="center_horizontal"
                android:hint="b" />
            <EditText
                android:id="@+id/et_c"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:hint="c" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_cuad"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Ver resultado de ecuacion cuadratica"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/amarillo2"/>

        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textblack"
            android:background="@color/amarillo2"/>






    </LinearLayout>
    </ScrollView>

</LinearLayout>