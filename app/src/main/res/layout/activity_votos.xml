<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Votos"
    android:background="@color/palido">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/Amarillo1"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="4dp">

                    <Button
                        android:id="@+id/btn_home"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/amarillo2"
                        android:text="log in"
                        android:textSize="12dp"
                        android:textColor="@color/textblack" />


                    <Button
                        android:id="@+id/btn_cuadratica"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="54dp"
                        android:backgroundTint="@color/amarillo2"
                        android:text="Ecuacion cuadratica"
                        android:textSize="12dp"
                        android:textColor="@color/textblack" />

                    <Button
                        android:id="@+id/btn_votos"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="99dp"
                        android:backgroundTint="@color/amarillo2"
                        android:text="Votos"
                        android:textSize="12dp"
                        android:textColor="@color/textblack" />

                    <Button
                        android:id="@+id/btn_pago"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="146dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/amarillo2"
                        android:text="Pago l[iquido"
                        android:textSize="12dp"
                        android:textColor="@color/textblack" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eleccion de candidato"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="30dp"


                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese votos:"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/et_voto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresar"
                android:textColor="@color/textblack"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/Amarillo1"
                android:drawableTop="@drawable/ic_baseline_how_to_vote_24"/>
            <TextView
                android:id="@+id/tv_resultado"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textblack"
                android:background="@color/amarillo2"/>






        </LinearLayout>
    </ScrollView>

</LinearLayout>