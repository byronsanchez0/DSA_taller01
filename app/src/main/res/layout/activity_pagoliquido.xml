<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pagoliquido"
    android:background="@color/palido"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/Amarillo1"
                card_view:cardCornerRadius="30dp"
                card_view:cardElevation="4dp">

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="log in"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />


                <Button
                    android:id="@+id/btn_cuadratica"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="54dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="Ecuacion cuadratica"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />

                <Button
                    android:id="@+id/btn_votos"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="99dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="Votos"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />

                <Button
                    android:id="@+id/btn_pago"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="146dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/amarillo2"
                    android:text="Pago l[iquido"
                    android:textSize="12dp"
                    android:textColor="@color/textblack" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora de pago liquido:"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100px"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:textAlignment="center"

            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:inputType="textPersonName"
            android:hint="Nombre de empleado"
            android:layout_gravity="center_horizontal"
            android:shadowColor="@color/black"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/apellido"
            android:inputType="textPersonName"
            android:hint="Apellido de empleado"
            android:layout_gravity="center_horizontal"
            android:shadowColor="@color/black"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/cargo"
            android:inputType="textPersonName"
            android:hint="Cargo"
            android:layout_gravity="center_horizontal"
            android:shadowColor="@color/black"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/hours"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:hint="Numero de horas"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btn_ver"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:onClick="onSaveButtonClick"
            android:text="Ver pago" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Las deducciones de sus salario son:"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22dp"
            android:drawableTop="@drawable/ic_baseline_attach_money_24"
            />
        <TextView
            android:id="@+id/neto_tv"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="45dp"
            android:background="@color/amarillo2"
            />


    </LinearLayout>
    </ScrollView>

</LinearLayout>