<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/palido">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_marginHorizontal="55dp">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Desafio practico 01 DSA"
           android:gravity="center_horizontal"
           android:layout_marginTop="30dp"
           android:textStyle="bold"
           android:textSize="30dp"
           android:drawableTop="@drawable/ic_baseline_insert_emoticon_24"
           />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Ingrese usuario:"
           android:layout_marginTop="30dp"
           android:textSize="15dp"
       />

       <EditText
           android:id="@+id/et_user"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="10dp"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Ingrese contraseÃ±a:"
           android:layout_marginTop="30dp"
           android:textSize="15dp"
           />

       <EditText
           android:id="@+id/et_pwd"
           android:inputType="textPassword"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="10dp"
           />

       <Button
       android:id="@+id/btn_login"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ingresar"
           android:textColor="@color/textblack"
       android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal"
           android:backgroundTint="@color/Amarillo1"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="40dp"
           >
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="250dp"
               card_view:cardCornerRadius="30dp"
               card_view:cardElevation="4dp"
               android:backgroundTint="@color/Amarillo1"
               >



           <Button
               android:id="@+id/btn_cuadratica"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Ecuacion cuadratica"
               android:layout_marginTop="40dp"
               android:layout_gravity="center_horizontal"
               android:backgroundTint="@color/amarillo2"
               android:textColor="@color/textblack"/>

           <Button
               android:id="@+id/btn_votos"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Votos"
               android:layout_marginTop="105dp"
               android:layout_gravity="center_horizontal"
               android:backgroundTint="@color/amarillo2"
               android:textColor="@color/textblack"/>

           <Button
               android:id="@+id/btn_pago"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Pago l[iquido"
               android:layout_marginTop="160dp"
               android:layout_marginBottom="20dp"
               android:layout_gravity="center_horizontal"
               android:backgroundTint="@color/amarillo2"
               android:textColor="@color/textblack"/>

           </androidx.cardview.widget.CardView>

       </LinearLayout>




   </LinearLayout>
    </ScrollView>

  </LinearLayout>